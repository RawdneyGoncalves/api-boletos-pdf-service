{
  "name": "boletos",
  "version": "1.0.0",
  "description": "Sistema de geração e gestão de boletos",
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --watch src index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm migration:generate -- -d ./data-source.ts src/migrations/Migration",
    "migration:run": "npm run typeorm migration:run -- -d ./data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./data-source.ts"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "env": "^0.0.2",
    "express": "^5.1.0",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "pdf-lib": "^1.17.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
